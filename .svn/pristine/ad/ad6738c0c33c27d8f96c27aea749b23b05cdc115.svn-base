<script type="text/javascript" src="../script/api.js"></script>
<script type="text/javascript">
    var citylist = localStorage.recommendlist.split(",");
    var introducelist = localStorage.introducelist.split(",");
    var i = citylist.length;
    var route;
    var index;
    var a;
    var b;
    var lon = localStorage.mylon;
    var lat = localStorage.mylat;
    function loading() {
        $.showPreloader('正在加载...')
        setTimeout(function () {
            $.hidePreloader();
        }, 1000);
    }
    function daohang() {
        loading();
        var baiduNavigation = api.require('baiduNavigation');
        baiduNavigation.start({
            start: { // 起点信息.
                position: { // 经纬度，与address配合可为空
                    lon: lon, // 经度.
                    lat: lat // 纬度.
                }
            },
            end: { // 终点信息.
                position: { // 经纬度，与address配合可为空
                    lon: a, // 经度
                    lat: b // 纬度
                }
            }
        }, function (ret, err) {
            if (ret.status) {
                api.alert({
                    title: "提示",
                    msg: '导航成功'
                });
            } else {
                if (1 == err.code) {
                    toast("获取地理位置失败");
                }
                if (2 == err.code) {
                    toast("定位服务未开启");
                }
                if (3 == err.code) {
                    toast("线路取消");
                }
                if (4 == err.code) {
                    toast("已退出导航");
                }
                else {
                    toast("导航出错");
                }
                ;
            }
        });
    }
    function toast(tst) {
        api.toast({
            msg: tst
        });
    }
    function search() {
        var map = api.require('bMap');
        document.getElementById("baike").innerHTML = citylist[index];
        document.getElementById("jieshao").innerHTML = introducelist[index];
        document.getElementById("zhongdian").innerHTML = citylist[index];
        map.searchInCity({
            city: localStorage.city,
            keyword: citylist[index],
            pageIndex: 0,
            pageCapacity: 1
        }, function (ret) {
            if (ret.status) {
                a = ret["results"][0].lon;
                b = ret["results"][0].lat;
                distance(a, b);
                discover(a, b);
                map.open({
                    rect: {
                        x: 0,
                        y: 0,
                        w: api.winWidth,
                        h: 200
                    },
                    center: {
                        lon: a,
                        lat: b
                    },
                    zoomLevel: 17,
                    showUserLocation: true,
                    fixedOn: api.frameName,
                    fixed: true
                }, function (ret) {
                    if (ret.status) {
                        map.addAnnotations({
                            annotations: [{
                                id: 1, lon: a, lat: b
                            }],
                            draggable: false
                        }, function (ret) {
                            if (ret) {
                                //alert(ret.id);
                            }
                        });
                        map.addCircle({
                            id: 2,
                            center: {
                                lon: a,
                                lat: b
                            },
                            radius: 300,
                            styles: {
                                borderColor: 'rgb(236, 85, 85)',
                                borderWidth: 1,
                                fillColor: 'rgba(212, 132, 132, 0.5)'
                            }
                        });
                    }
                });
            } else {
                alert(JSON.stringify(err));
            }
        });

    }
    function draw() {
        var map = api.require('bMap');
        map.drawRoute({
            id: 3,
            autoresizing: true,
            index: 0,
            styles: {
                start: {
                    icon: ''
                },
                end: {
                    icon: ''
                }
            }
        }, function (ret) {

        });
    }
    function guihuafangan() {
        var map = api.require('bMap');
        map.searchRoute({
            id: 3,
            type: 'transit',
            policy: 'ebus_time_first',
            start: {
                lon: lon,
                lat: lat
            },
            end: {
                lon: a,
                lat: b
            }
        }, function (ret, err) {
            if (ret.status) {
                draw();
                route = ret["plans"];
                var luxianbtn = $api.byId('one');
                var huanchenbtn = $api.byId('two');
                luxianbtn.style.display = "none";
                huanchenbtn.style.display = "block";
            }
        });
    }
    function show() {
        var mycard = $api.byId('mycard');
        mycard.style.display = "block";
        var three = $api.byId('three');
        three.style.display = "none";
        var four = $api.byId('four');
        four.style.display = "block";
    }
    function hide() {
        var mycard = $api.byId('mycard');
        mycard.style.display = "none";
        var three = $api.byId('three');
        three.style.display = "block";
        var four = $api.byId('four');
        four.style.display = "none";
    }
    function showluxian() {
        //alert(JSON.stringify(route));
        var mytimeline = $api.byId('mytimeline');
        mytimeline.style.display = "block";
        var two = $api.byId('two');
        two.style.display = "none";
        var five = $api.byId('five');
        five.style.display = "block";
    }
    function hideluxian() {
        var mytimeline = $api.byId('mytimeline');
        mytimeline.style.display = "none";
        var two = $api.byId('two');
        two.style.display = "block";
        var five = $api.byId('five');
        five.style.display = "none";
    }
    function distance(c, d) {
        var map = api.require('bMap');
        map.getDistance({
            start: {
                lon: lon,
                lat: lat
            },
            end: {
                lon: c,
                lat: d
            }
        }, function (ret) {
            if (ret.status) {
                document.getElementById("badge").innerHTML = "~" + Math.floor(ret.distance / 1000 + 20) + "km";
            }
        });
    }
    function discover(e, f) {
        var p = 0;
        var arr = new Array();
        arr[0] = "饭店";
        arr[1] = "宾馆";
        arr[2] = "公园";
        arr[3] = "ktv";
        arr[4] = "公交";
        arr[5] = "超市";
        for (var l = 0; l < 6; l++) {
            var map = api.require('bMap');
            map.searchNearby({
                keyword: arr[l],
                lon: e,
                lat: f,
                radius: 500
            }, function (ret, err) {
                if (ret.status) {
                    document.getElementById(p).innerHTML = ret.totalNum;
                    p++;
                } else {

                }
            });
        }
    }
    apiready = function () {
        index = api.pageParam.index;
        search();
        loading();
//		document.getElementById('title').innerHTML = citylist[index];
//		document.getElementById('subtitle').innerHTML = "";


        api.addEventListener({
            name: 'swiperight'
        }, function (ret, err) {
            api.closeWin({
                animation: {
                    type: 'push',
                    subType: 'from_left',
                    duration: 300
                }
            });
        });
    };
</script>
