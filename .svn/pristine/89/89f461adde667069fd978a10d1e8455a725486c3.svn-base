<!doctype html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport"
          content="maximum-scale=1.0,minimum-scale=1.0,user-scalable=0,width=device-width,initial-scale=1.0"/>
    <title>category_window</title>
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-status-bar-style" content="black">

    <link rel="stylesheet" href="http://g.alicdn.com/msui/sm/0.6.2/css/sm.min.css">
    <link rel="stylesheet" type="text/css" href="../css/api.css"/>
    <link rel="stylesheet" type="text/css" href="../css/common.css"/>
    <link rel="stylesheet" type="text/css" href="../css/aui-flex.css"/>
    <link rel="stylesheet" type="text/css" href="../css/aui.css"/>
    <style>
        .aui-content {
            margin-top: 43px;
            background-color: #FFFFFF;
            height: 25px;
            color: #404144;
        }

        .aui-col-xs-3 {
            border-right: 1px solid #ccc;
        }
    </style>
</head>
<body>
<header class="bar bar-nav" id="thridHeader" style="background-color: #FFFFFF;">
    <button class="button button-link button-nav pull-left" onclick="closecategory()" style="color: black;">
        <span class="icon icon-left"></span>
        返回
    </button>
    <h1 class="title" style="color: black">分类浏览</h1>
</header>
<div class="aui-content">
    <div class="aui-col-xs-3 aui-text-center">类别</div>
    <div class="aui-col-xs-9 aui-text-center">详情简介</div>
</div>
</body>
<script type="text/javascript" src="../script/api.js"></script>
<script type="text/javascript">
    function closecategory() {
        api.closeWin({
            animation: {
                type: 'push',
                subType: 'from_left',
                duration: 300
            }
        });
    }
    function openframe() {
        var thridHeader = $api.byId('thridHeader');
        $api.fixIos7Bar(thridHeader);
        var thridHeader = $api.offset(thridHeader);
        api.openFrame({
            name: 'category_frame1',
            url: 'category_frame1.html',
            rect: {
                x: 0,
                y: thridHeader.h + 23,
                w: 'auto',
                h: 'auto'
            },
            bounces: false,
            delay: 200,
            vScrollBarEnabled: false,
            hScrollBarEnabled: false
        });
    }
    function loading() {
        $.showIndicator();
        setTimeout(function () {
            $.hideIndicator();
        }, 2000);
    }
    apiready = function () {
        loading();
        openframe();
    }
</script>
<script type='text/javascript' src='http://g.alicdn.com/sj/lib/zepto/zepto.min.js' charset='utf-8'></script>
<script type='text/javascript' src='http://g.alicdn.com/msui/sm/0.6.2/js/sm.min.js' charset='utf-8'></script>
</html>	
